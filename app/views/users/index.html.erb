<h2>ユーザー情報一覧</h2>


<table>
    <thead>
        <tr>
            <th>id</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>パスワード</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.introduction %></td>
                <td><%= user.updated_at.to_s(:datetime_jp) %></td>
                <td><%= user.created_at.to_s(:datetime_jp) %></td>
                <td>
                  <%= link_to "参照", user %>
                </td>
                <td>
                  <%= link_to "編集", users_edit_path %>
                </td>
                <td>
                  <%= link_to "プロフィール", users_profile_path %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to "ユーザー新規登録", :new_user %></p>
