<div class="container-fluid">
  <div class="row">
    <div class="col-lg-2 d-lg-block d-none">
      <%= link_to "アカウント", users_account_path, class:"d-block mt-3 py-2 pl-3 hover-blue" %>
      <%= link_to "プロフィール", users_profile_path, class:"d-block py-2 pl-3 border-primary active_right" %>
    </div>
    <div class="col-lg-2 d-lg-none py-3">
      <%= link_to "アカウント", users_account_path, class:"mt-3 py-2 ml-3 hover-blue text-center" %>
      <%= link_to "プロフィール", users_profile_path, class:"py-2 ml-3 border-primary active_bottom text-center" %>
    </div>
    <div class="col-lg-10 container-fluid bg-light">
      <div class="row justify-content-center">
        <div class="col-9 bg-white my-4 rouded p-4">
          <h4 class="border-bottom pb-4 mb-0">プロフィール</h4>
          <%= form_with model: @user, url: users_profile_update_path, local: true do |f| %>
          <div class="row pb-4 pt-4 border-bottom justify-content-center">
            <%= image_tag @user.image, class: 'user_picture rounded-circle' if @user.image.attached? %>
          </div>
          <div class="row pb-4 pt-4 border-bottom">
            <%= f.label :image_name, "アイコン画像", class: "col-sm-3 col-form-label require-stamp font-weight-bold" %>
            <div class="col-sm-9">
              <%= f.file_field :image %>
            </div>
          </div>
          <div class="row pb-4 pt-4 border-bottom">
            <%= f.label :name, "名前", class: "col-sm-3 col-form-label require-stamp font-weight-bold" %>
            <div class="col-sm-9">
              <%= f.text_field :name, value: @user.name, class: "form-control" %>
            </div>
          </div>
          <div class="row pb-4 pt-4 border-bottom">
            <%= f.label :introduction, "自己紹介", class: "col-sm-3 col-form-label require-stamp font-weight-bold" %>
            <div class="col-sm-9">
              <%= f.text_area :introduction, value: @user.introduction, rows: "5", class: "form-control" %>
            </div>
          </div>
          <%= f.submit "更新", class: "btn btn-primary mt-4 col-sm-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
