<div class="main center-block">
  <div class="container">
    <div class="row col-lg-6">
      <div class="centering">
        <div class="form-group">
          <div class="bg-light p-4 rounded">
            <h2>Potepan Shareでまだ体験したことのない旅をしよう</h2>
            <%= form_with url: rooms_search_path, method: :get do |f| %>
            <div class="form-group">
              <%= f.label :address, "エリア" %>
              <%= f.text_field :address, class:"form-control mb-4"%>
            </div>
            <%= f.submit "探す", class:"form-control btn-primary"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<div class="container pb-4">
<h4 class="py-4 font-weight-bold">おすすめエリア</h4>
<div class="row">
  <div class="col-lg-3 col-6">
    <div class="card">
      <%= link_to rooms_search_path address: "東京" do %>
      <%= image_tag "img_tokyo.jpg", class: "card-img card-height" %>
      <div class="card-img-overlay d-flex align-items-end justify-content-center">
        <h4 class="card-title text-white font-weight-bold">東京</h4>
      </div>
    <% end %>
  </div>
</div>
<div class="col-lg-3 col-6">
  <div class="card">
    <%= link_to rooms_search_path address: "大阪" do %>
    <%= image_tag("img_osaka.jpg", class: "card-img card-height")%>
    <div class="card-img-overlay d-flex align-items-end justify-content-center">
      <h4 class="card-title text-white font-weight-bold">大阪</h4>
    </div>
  <% end %>
</div>
</div>
<div class="col-lg-3 col-6">
<div class="card">
  <%= link_to rooms_search_path address: "京都" do %>
  <%= image_tag "img_kyoto.jpg", class: "card-img card-height" %>
  <div class="card-img-overlay d-flex align-items-end justify-content-center">
    <h4 class="card-title text-white font-weight-bold">京都</h4>
  </div>
<% end %>
</div>
</div>
<div class="col-lg-3 col-6">
<div class="card">
<%= link_to rooms_search_path address: "札幌" do %>
<%= image_tag "img_sapporo.jpg", class: "card-img card-height" %>
<div class="card-img-overlay d-flex align-items-end justify-content-center">
  <h4 class="card-title text-white font-weight-bold">札幌</h4>
</div>
<% end %>
</div>
</div>

</div>
</div>
